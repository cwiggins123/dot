#!/bin/bash 

fullString=$(curl -Ss 'https://wttr.in?O&T&Q' | cut -c 16- | head -2 | xargs echo )
forecast=$(echo $fullString | awk '{ print $1 }')

case $forecast in

  "Clear")
    icon="☀️"
    ;;

  "Sunny")
    icon="☀️"
    ;;

  "Partly")
    icon="🌤️"
    ;;

  "Cloudy")
    icon="⛅"
    ;;

  "Overcast")
    icon=" "
    ;;

  "Mostly")
    icon="🌥️"
    ;;

  "Light")
    icon="🌦️"
    ;;

  "Moderate")
    icon="🌧️"
    ;;

  "Heavy")
    icon="⛈️"
    ;;

esac
echo " $icon$fullString"

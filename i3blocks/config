# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks

# Global properties
separator=true
separator_block_width=15


[volume]
command=$HOME/.local/bin/volume
interval=1
color=#ffffff

[temperature]
command=$HOME/.local/bin/temp
interval=1
#T_WARN=70
#T_CRIT=90
color=#ffffff

[cpu]
command=$HOME/.local/bin/cpu_usage
interval=1
LABEL= 
#T_WARN=50
#T_WARN=80
DECIMALS=2

[bitcoin]
command=echo $($HOME/.local/bin/price btc Bitcoin  24)
interval=3600
color=#e0af68

[weather]
#command=curl -Ss 'https://wttr.in?O&T&Q' | cut -c 16- | head -2 | xargs echo
command=weather
interval=3600
color=#A4c2F4

[time]
command=~/.local/bin/clock
interval=60
